<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="280dp">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


                <android.widget.Button
                    android:id="@+id/menu_1"
                    android:layout_width="114dp"
                    android:layout_height="115dp"
                    android:background="@drawable/vector_menu_two_1" />
            </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:layout_gravity="right">



                <android.widget.Button
                    android:id="@+id/menu_2"
                    android:layout_width="123dp"
                    android:layout_height="107dp"
                    android:background="@drawable/vector_menu_two_2" />

            </FrameLayout>


        <FrameLayout
            android:id="@+id/menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:visibility="gone"
            android:layout_marginBottom="31dp"
            android:layout_marginTop="32dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_menu_two_3" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Бруси та турник"
                android:paddingBottom="40dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />


            </FrameLayout>


        <FrameLayout
            android:id="@+id/menu_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center|bottom">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.widget.Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vector_menu_4" />
            </FrameLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="36dp">



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_menu_5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_menu_two_5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TRX"
                android:textSize="14sp"
                android:paddingBottom="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="35dp">


                <android.widget.Button
                    android:id="@+id/menu_6"
                    android:layout_width="123dp"
                    android:layout_height="107dp"
                    android:background="@drawable/vector_menu_two_6"/>

            </FrameLayout>


        <android.widget.Button
            android:id="@+id/cloded"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_center_closed" />
    </FrameLayout>
