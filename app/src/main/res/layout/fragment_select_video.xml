<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="15dp">

    <FrameLayout
        android:id="@+id/frame_events"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_bottom_one4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:contentDescription="@string/icon"
        app:layoutDescription="@string/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_bottom_three"
        app:layout_constraintTop_toBottomOf="@+id/ic_bottom_one3"
        app:srcCompat="@drawable/button_accent" />

    <ImageView
        android:id="@+id/ic_bottom_one3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/icon"
        android:layout_weight="1"
        app:layoutDescription="@string/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_bottom_two"
        app:layout_constraintTop_toBottomOf="@+id/ic_bottom_one2"
        app:srcCompat="@drawable/button_accent" />

    <ImageView
        android:id="@+id/ic_bottom_one2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:contentDescription="@string/icon"
        app:layoutDescription="@string/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_bottom_one"
        app:layout_constraintTop_toBottomOf="@+id/frame_events"
        app:srcCompat="@drawable/button_accent" />

    <ImageView
        android:id="@+id/ic_bottom_one"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:contentDescription="@string/icon"
        app:layoutDescription="@string/icon"
        app:layout_constraintEnd_toStartOf="@+id/ic_bottom_one2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_events"
        app:srcCompat="@drawable/button_accent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one"
        app:layout_constraintStart_toStartOf="@+id/ic_bottom_one"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one"
        app:srcCompat="@drawable/ic_turn_off" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one2"
        app:layout_constraintStart_toStartOf="@+id/ic_bottom_one2"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one2"
        app:srcCompat="@drawable/ic_movie" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one3"
        app:layout_constraintStart_toStartOf="@+id/ic_bottom_one3"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one3"
        app:srcCompat="@drawable/ic_people" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one4"
        app:layout_constraintStart_toStartOf="@+id/ic_bottom_one4"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one4"
        app:srcCompat="@drawable/ic_sward" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/workout"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/video_official"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one2"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one2" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/users_video"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one3"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one3" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/tro_video"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_one4"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_one4" />

    <ImageView
        android:id="@+id/ic_bottom_two"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintEnd_toStartOf="@+id/ic_bottom_one3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_bottom_one"
        app:srcCompat="@drawable/button_accent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_two"
        app:layout_constraintStart_toStartOf="@+id/ic_bottom_two"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_two"
        app:srcCompat="@drawable/ic_turn_off" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/hitch"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_two"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_two" />

    <ImageView
        android:id="@+id/ic_bottom_three"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintEnd_toStartOf="@+id/ic_bottom_one4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_bottom_two"
        app:srcCompat="@drawable/button_accent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_three"
        app:layout_constraintStart_toStartOf="@+id/ic_bottom_three"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_three"
        app:srcCompat="@drawable/ic_turn_off" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/doctor_advice"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bottom_three"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/ic_bottom_three" />

    <ImageView
        android:id="@+id/closed"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layoutDescription="@string/icon"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_back_action"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/moving_activities"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/closed"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:button="@drawable/video_selector"
            android:checked="true"
            android:paddingStart="8dp"
            android:text="@string/video_official"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:button="@drawable/video_selector"
            android:paddingStart="8dp"
            android:text="@string/users_video"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:button="@drawable/video_selector"
            android:paddingStart="8dp"
            android:text="@string/tro_video"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>