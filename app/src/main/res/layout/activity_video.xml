<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:text="..."
                android:textColor="@color/text_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:minHeight="180dp"
                android:layout_weight="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="8dp">


                    <VideoView
                        android:id="@+id/videoview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="left|bottom"
                        app:srcCompat="@drawable/ic_pause"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/full_screan"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="right|bottom"
                        app:srcCompat="@drawable/ic_baseline_fullscreen"
                        tools:ignore="VectorDrawableCompat" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <WebView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="10dp">

                    <android.widget.Button
                        android:id="@+id/like"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_like"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/like_cout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="33"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />


                    <Button
                        android:id="@+id/back_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/button_style"
                        android:drawableLeft="@drawable/ic_back"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:text="Рухові активності" />

                    <Button
                        android:id="@+id/map_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_style"
                        android:drawableLeft="@drawable/ic_location_white"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:text="Майданчики на мапі" />

<!--                    <android.widget.Button-->
<!--                        android:id="@+id/description_action"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="16dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:fontFamily="@font/montserrat_medium"-->
<!--                        android:textStyle="bold"-->
<!--                        android:background="@drawable/button_gray"-->
<!--                        android:drawableLeft="@drawable/ic_info"-->
<!--                        android:drawablePadding="8dp"-->
<!--                        android:padding="12dp"-->
<!--                        android:text="Про майданчик"-->
<!--                        android:textColor="@color/text_color" />-->

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="..."
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/text_color"
                        android:letterSpacing="0.01"
                        android:textStyle="bold"
                        android:textSize="18sp"/>




                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>