<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="16dp"
        app:cardCornerRadius="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_style_gren"
                android:padding="4dp"
                android:gravity="left"
                android:textSize="14sp"
                android:text="Опубліковано: невідомо" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/galary"
                android:layout_marginTop="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  />

            <ImageView
                android:id="@+id/image_club"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_prew" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/list_tab"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_park"
                android:gravity="left"
                android:textSize="16sp"
                android:text="Докладніше" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>