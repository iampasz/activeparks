<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDF0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/closed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_back_action" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Відеоролик"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/image_video"
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_prew" />


            </androidx.cardview.widget.CardView>

            <android.widget.Button
                android:id="@+id/photo_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_gray"
                android:drawableLeft="@drawable/ic_create"
                android:drawablePadding="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Додати фото"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">


                <EditText
                    android:id="@+id/url_video"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/backround_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="idOfYourVideo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#EDEDF0"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text=" Посилання на відео з YouTube "
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </FrameLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/name_video"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/backround_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#EDEDF0"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Назва
"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/description_video"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"
                    android:gravity="top"
                    android:padding="16dp"
                    android:background="@drawable/backround_edit_text"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#EDEDF0"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Опис"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EDEDF0"
            android:text="Налаштування"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <Spinner
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/backround_edit_text"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#EDEDF0"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Категорія вправ"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <Spinner
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/backround_edit_text"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#EDEDF0"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Рівень складності"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </FrameLayout>

            <android.widget.Button
                android:id="@+id/remove_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_gray"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="Видалити"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/moderation_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_style"
                android:drawableLeft="@drawable/ic_rocket_on"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="На модерацію"
                android:textColor="@color/text_color_light"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>