<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    android:gravity="left"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/closed"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back_action" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Реєстрація"
                android:textColor="@color/text_color"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="18dp"
                android:gravity="left"
                android:text="Приєднуйтесь"
                android:textColor="@color/text_color"
                android:textSize="18sp"/>

                <EditText
                    android:id="@+id/name"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/backround_edit_text"
                    android:ems="10"
                    android:hint="Логін"
                    android:inputType="text" />

            <EditText
                android:id="@+id/password"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/backround_edit_text"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:gravity="left"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Пароль повинен містити великі, маленькі літери та цифри"
                    android:textColor="@color/text_red"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/email"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/backround_edit_text"
                    android:ems="10"
                    android:hint="Пошта"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Отримати код повторно через"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/code"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@drawable/backround_edit_text"
                        android:ems="10"
                        android:hint="Код з пошти"
                        android:inputType="number" />

                    <android.widget.Button
                        android:id="@+id/sendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        style="@style/ButtonGray"
                        android:background="@drawable/button_gray"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:text="Отримати код"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/reg_action"
                    style="@style/Button"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@drawable/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:text="Зареєструватись" />

            </LinearLayout>
    </ScrollView>

</LinearLayout>